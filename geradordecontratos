<head>
  <meta charset="UTF-8">
  <title>Gerador de Contrato</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background: #f0f0f0;
    }
    input, button {
      padding: 10px;
      margin: 8px 0;
      width: 100%;
      max-width: 400px;
    }
    button {
      background: #004080;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background: #0066cc;
    }
    #mensagem {
      margin-top: 15px;
      font-weight: bold;
    }
    a {
      display: inline-block;
      margin-top: 10px;
      padding: 10px;
      background: #28a745;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }
    a:hover {
      background: #218838;
    }
  </style>
</head>
<body>

  <h3>Preencha os dados para gerar o contrato:</h3>

  <form id="formulario">
    <input name="nome" placeholder="Nome completo" required><br>
    <input name="cpf" placeholder="CPF" required><br>
    <input name="data" placeholder="Data (ex: 06/06/2025)" required><br>
    <button type="submit">Gerar Contrato</button>
  </form>

  <div id="mensagem"></div>
  <div id="link-doc"></div>

  <script>
    document.getElementById('formulario').addEventListener('submit', function(e) {
      e.preventDefault();
      const dados = new FormData(this);

      fetch('https://script.google.com/macros/s/AKfycbwzGLR1xM6ZL-gdIigqiMGJ3kkSZ9biscVTvtHugcdX6wl0qf9cx-Vvsd91ZNHAerhm0w/exec', {
        method: 'POST',
        body: dados
      })
      .then(res => res.text())
      .then(url => {
        document.getElementById('mensagem').innerText = "Contrato gerado com sucesso!";
        document.getElementById('link-doc').innerHTML = `<a href="${url}" target="_blank">Abrir contrato gerado</a>`;
        document.getElementById('formulario').reset();
      })
      .catch(err => {
        document.getElementById('mensagem').innerText = "Erro ao gerar contrato.";
        console.error(err);
      });
    });
  </script>

</body>
</html>
